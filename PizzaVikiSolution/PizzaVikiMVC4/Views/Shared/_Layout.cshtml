@model PizzaVikiMVC4.CategoriesAndPhoneOrders
<!DOCTYPE html>
<html>
<head>
    <title>Пици Вики</title>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="keywords" content="Пица Вики, Бързо хранене, дюнери, пици, катми,
				салати, напитки, pizza viki, piza viki, burzo hranene, duneri, pici, napitki,
				katmi, salati, pizza" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="shortcut icon" href="images/Pizzasliceicon.png" type="image/x-icon" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        $(function () {
            var menuEffect = function () {
                $('.nav li').find('>ul').hide();
            }
            menuEffect.prototype = {
                effect: function () {
                    $('.nav li').hover(function () {
                        $(this).find('>ul').slideDown(600);
                    }, function () {
                        $(this).find('>ul').hide();
                    }
                    )
                }
            }
            obj = new menuEffect();
            obj.effect();
        }); 
    </script>
</head>
<body>
    <div id="wrapper">
        <section id="logo">
            <article>
                <div>
                </div>
            </article>
        </section>
        <header>
            <section>
                <article>
                    <ul class="header_Contacts clear">
                        @foreach (var phone in Model.PhoneOrders)
                        {
                            <li>
                                <img src="@phone.LogoImage" alt="globul logo" width="18" height="15" />
                                <p class="globul_phone">@phone.OperatorName: @phone.PhoneNumber</p>
                            </li>
                        }
                    </ul>
                </article>
            </section>
        </header>
            @RenderSection("Menu")
        <section id="body">
            @RenderBody()
        </section>
            @RenderSection("Footer", false);
    </div>
</body>
</html>
